# ==================================================
# JIT Bot Configuration
# ==================================================

# Runtime Environment
# Set to production only when ready for live execution (NOT allowed in PR1)
NODE_ENV=development

# Blockchain Configuration
# Supported values: ethereum, arbitrum
CHAIN=ethereum

# RPC Endpoints
# HTTP endpoint for read operations and gas estimation
RPC_URL_HTTP=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
# WebSocket endpoint for real-time mempool monitoring
RPC_URL_WS=wss://eth-mainnet.ws.alchemyapi.io/v2/YOUR_ALCHEMY_KEY

# CRITICAL: Simulation Mode (MUST remain true for PR1)
# This prevents any live transaction execution. Set to false only for live production.
SIMULATION_MODE=true

# Gas Configuration
# Maximum gas price in Gwei for transaction execution
MAX_GAS_GWEI=100

# Profit Thresholds
# Global minimum profit in USD required to execute opportunities
GLOBAL_MIN_PROFIT_USD=10.0

# Pool Configuration
# Comma-separated list of pool identifiers to monitor
# Format: TOKEN0-TOKEN1-FEE% (e.g., WETH-USDC-0.05%,ETH-USDT-0.3%)
POOL_IDS=WETH-USDC-0.05%,ETH-USDT-0.3%,WBTC-ETH-0.3%

# Metrics & Monitoring
# Prometheus metrics server port
PROMETHEUS_PORT=9090
# DEPRECATED: Use PROMETHEUS_PORT instead. Will show warning if set.
# METRICS_PORT=3001

# Flashbots Configuration (NOT used in PR1 - simulation only)
# Flashbots relay URL for MEV bundle submission
FLASHBOTS_RELAY_URL=https://relay.flashbots.net
# Private key for Flashbots bundle signing (keep separate from main wallet)
FLASHBOTS_PRIVATE_KEY=0x...

# Wallet Configuration
# Main wallet private key for transaction signing
PRIVATE_KEY=0x...

# Fork Testing Configuration
# Specific block number to fork from for testing (optional)
FORK_BLOCK_NUMBER=

# ==================================================
# Additional Configuration (Optional)
# ==================================================

# Multi-Pool Settings
POOL_MAX_FAILURES=5
POOL_COOLDOWN_MS=300000
MAX_CONCURRENT_WATCHERS=10

# Per-Pool Profit Thresholds (optional overrides)
POOL_PROFIT_THRESHOLD_USD__WETH_USDC_0_05_=150
POOL_PROFIT_THRESHOLD_USD__ETH_USDT_0_3_=120
POOL_PROFIT_THRESHOLD_USD__WBTC_ETH_0_3_=200

# Bot Behavior
MIN_PROFIT_THRESHOLD=0.01
MAX_LOAN_SIZE=1000000
TICK_RANGE_WIDTH=60
GAS_PRICE_MULTIPLIER=1.1

# Simulation & Testing
TARGET_POOLS=WETH-USDC-0.05%,ETH-USDT-0.3%,WBTC-ETH-0.3%
SIMULATION_GAS_PRICE_GWEI=20
SIMULATION_REPORT_DIR=./reports

# External APIs
ETHERSCAN_API_KEY=
TENDERLY_API_KEY=

# Deployment Configuration
VERIFY_CONTRACTS=false
DEPLOYMENT_NETWORK=fork
JIT_CONTRACT_ADDRESS=