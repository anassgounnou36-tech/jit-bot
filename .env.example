# Environment Configuration for JIT Bot PR1 (Simulation-Only)
# ================================================================

# Node Environment - controls simulation vs live mode
NODE_ENV=development  # development=simulation, production=live (FORBIDDEN in PR1)

# Chain Configuration - must match config.json chain keys
CHAIN=mainnet  # mainnet or arbitrum

# RPC Configuration - separate providers for different use cases
RPC_URL_WS=wss://eth-mainnet.ws.alchemyapi.io/v2/YOUR_ALCHEMY_KEY    # WebSocket for mempool monitoring
RPC_URL_HTTP=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY   # HTTP for state calls and fork sims

# Safety Mode - MUST remain true for PR1 (live execution disabled)
SIMULATION_MODE=true  # false is FORBIDDEN in PR1

# Gas and Profit Controls
MAX_GAS_GWEI=100                    # Maximum gas price in gwei
GLOBAL_MIN_PROFIT_USD=50.0          # Global minimum profit threshold in USD

# Pool Configuration - comma-separated pool addresses or IDs
POOL_IDS=0x88e6A0c2dDD26FEEb64F039a2c41296FcB3f5640,0x4e68Ccd3E89f51C3074ca5072bbAC773960dFa36

# Metrics and Monitoring
PROMETHEUS_PORT=9090                # Port for Prometheus metrics server
METRICS_PORT=3001                   # DEPRECATED: Use PROMETHEUS_PORT instead

# Flashbots Configuration (PLACEHOLDER ONLY - NOT USED IN PR1)
FLASHBOTS_RELAY_URL=https://relay.flashbots.net  # Placeholder for PR2
FLASHBOTS_PRIVATE_KEY=0x...                      # Placeholder for PR2 - NOT USED

# Wallet Configuration (PLACEHOLDER ONLY - NOT USED IN PR1)
PRIVATE_KEY=0x...                   # Placeholder for PR2 - NOT USED

# Fork Testing Configuration
FORK_BLOCK_NUMBER=18500000          # Specific block for local fork tests

# Legacy Multi-Pool Settings (maintained for backward compatibility)
ENABLE_MULTI_POOL=true
POOL_MAX_FAILURES=5
POOL_COOLDOWN_MS=300000
MAX_CONCURRENT_WATCHERS=10

# Per-Pool Profit Thresholds (optional)
POOL_PROFIT_THRESHOLD_USD__WETH_USDC_0_05_=150
POOL_PROFIT_THRESHOLD_USD__ETH_USDT_0_3_=120
POOL_PROFIT_THRESHOLD_USD__WBTC_ETH_0_3_=200

# Legacy Bot Configuration
MIN_PROFIT_THRESHOLD=0.01
MAX_LOAN_SIZE=1000000
TICK_RANGE_WIDTH=60
GAS_PRICE_MULTIPLIER=1.1

# Fork Simulation Configuration
TARGET_POOLS=WETH-USDC-0.05%,ETH-USDT-0.3%,WBTC-ETH-0.3%
SIMULATION_GAS_PRICE_GWEI=20
SIMULATION_REPORT_DIR=./reports

# External APIs (for price oracles and validation)
ETHERSCAN_API_KEY=
TENDERLY_API_KEY=

# Deployment Configuration
VERIFY_CONTRACTS=false
DEPLOYMENT_NETWORK=fork
JIT_CONTRACT_ADDRESS=               # Will be set in PR2